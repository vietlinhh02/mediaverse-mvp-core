# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mediaverse_dev"
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/mediaverse_test"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_TOKEN_EXPIRY="2h"  # Access token expiry (e.g., 15m, 1h, 2h, 1d)
JWT_REFRESH_TOKEN_EXPIRY="30d"  # Refresh token expiry (e.g., 7d, 30d, 90d)
SESSION_SECRET="your-session-secret-change-this-in-production"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="/api/auth/google/callback"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_CALLBACK_URL="/api/auth/github/callback"

FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
FACEBOOK_CALLBACK_URL="/api/auth/facebook/callback"

# AWS S3 Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# SendGrid Configuration
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@mediaverse.com"

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"

# File Storage
UPLOADS_DIR="./uploads"
TEMP_DIR="./temp"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation
ENABLE_DOCS=true
API_BASE_URL=http://localhost:3000# Media Service Configuration
MEDIA_SERVICE_ENV_FILE=./media-service/.env
MEDIA_SERVICE_PORT=5001
MEDIA_SERVICE_API_KEYS=your-media-service-api-key
MEDIA_QUEUE_PREFIX=media-service
MEDIA_QUEUE_ATTEMPTS=3
MEDIA_QUEUE_BACKOFF_DELAY_MS=5000
MEDIA_STORAGE_BUCKET=media-assets
MEDIA_STORAGE_REGION=us-east-1
MEDIA_STORAGE_ENDPOINT=http://localhost:9000
MEDIA_STORAGE_ACCESS_KEY=your-minio-access-key
MEDIA_STORAGE_SECRET_KEY=your-minio-secret-key
MEDIA_STORAGE_FORCE_PATH_STYLE=true
CORE_WEBHOOK_URL=http://localhost:5000/api/media/webhook
CORE_WEBHOOK_SECRET=your-core-webhook-secret
