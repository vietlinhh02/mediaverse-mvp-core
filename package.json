{
  "name": "mediaverse-mvp-core",
  "version": "1.0.0",
  "description": "Mediaverse MVP - A multimedia content platform combining video sharing, article publishing, document sharing, and learning features",
  "main": "src/app.js",
  "scripts": {
    "start": "npm run docker:start && npm run start:core",
    "stop": "npm run docker:stop",
    "dev": "npm run docker:start && npm run dev:core",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "search:sync": "node scripts/sync-meilisearch.js",
    "start:core": "node src/app.js",
    "dev:core": "nodemon src/app.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "multimedia",
    "content-platform",
    "video-sharing",
    "articles",
    "documents",
    "learning"
  ],
  "author": "Mediaverse Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/lib-storage": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@prisma/client": "^5.7.1",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.0",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.53.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-parse": "^2.1.7",
    "redis": "^4.6.12",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-redis": "^5.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
